<?php

/**
 * @file
 * Implements hook.
 */

use Drupal\Core\Cache\Cache;

/**
 * Implements hook_install().
 */
function budget_form_install() {
  Cache::invalidateTags(['node_view']);
}

/**
 * Implements hook_uninstall().
 */
function budget_form_uninstall() {
  \Drupal::configFactory()->getEditable('movie_budget_form.settings')->delete();
}
